
@{
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <link href="//fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Report-Login-Free/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="/Report-Login-Free/css/font-awesome.min.css" type="text/css" media="all">
</head>
<body>
    <section class="w3l-hotair-form" style="background-image: url('https://cdn.hovia.com/app/uploads/Blue-Dog-Paw-Print-Pattern-Wallpaper-Mural-Plain.jpg');">
        <h1 style="color:ghostwhite;">Paw <img src="https://iili.io/rvQewu.png"/> Place<br /><br /></h1>
        <div class="container content-wthree w3l_form align-self left_grid_info" style="background-color:skyblue">
            <div class="workinghny-form-grid">
                <div class="main-hotair">
                    <div class="content-wthree">

                        <h2>Giriş Yap</h2>
                        @using (Html.BeginForm("AuthorLogin", "Login", FormMethod.Post))
                        {


                            <input type="text" class="text" name="Mail" placeholder="Mail Adresi" required="" autofocus>
                            <input type="password" class="password" name="Password" placeholder="Şifre" required="" autofocus>
                            <button class="btn" type="submit">Giriş Yap</button>

                        }
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="https://cdn-icons-png.flaticon.com/512/1581/1581594.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</body>
</html>